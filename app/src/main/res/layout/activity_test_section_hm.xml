<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:textAlignment="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="54dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@mipmap/back" />

            <ImageView
                android:layout_width="272dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@mipmap/logo" />

            <Button
                android:id="@+id/btn_lgut"
                android:layout_width="59dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@mipmap/lgut" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_tq"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/testquotation" />
            <Button
                android:id="@+id/btn_tb"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@mipmap/testbooking" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btn_rl"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/ratelist" />
            <Button
                android:id="@+id/btn_pd"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@mipmap/patientdata" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
