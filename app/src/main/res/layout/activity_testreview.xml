<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inf.tdfc.Testreview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:background="@drawable/bordergrey">
                <!--
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/tv_seltxt"/>-->

                <AutoCompleteTextView
                    android:id="@+id/actv_testdet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:hint="Search Test Name"
                    android:inputType="textMultiLine" />
                <!--  <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />-->
                <Button
                    android:id="@+id/btn_clrtest"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@mipmap/del" />
            </LinearLayout>
            //listview section

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borderblack"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/lv_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

    </LinearLayout>
</RelativeLayout>