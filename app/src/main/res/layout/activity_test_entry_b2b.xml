<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/btn_backtst"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingRight="40dp"
                    android:background="@mipmap/back"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/logo"/>
                <Button
                    android:id="@+id/btn_nxttest"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/next"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:background="@drawable/borderblack">

                <EditText
                    android:id="@+id/t_name_tst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:inputType="text"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:background="@drawable/borderblack">

                <EditText
                    android:id="@+id/t_agetst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Age"
                    android:inputType="number" />

                <RadioGroup
                    android:id="@+id/radioGrouptst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_maletst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10sp"
                        android:text="Male"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/rb_femaletst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="18sp" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:background="@drawable/borderblack">

                <EditText
                    android:id="@+id/t_addresstst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="textPostalAddress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:background="@drawable/borderblack">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:background="@drawable/borderblack">
                <EditText
                    android:id="@+id/t_phnotst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Phone No"
                    android:inputType="textImeMultiLine" />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:background="@drawable/borderblack">
                <EditText
                    android:id="@+id/t_lab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Laboratory Name"
                    android:inputType="textCapWords" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:background="@drawable/borderblue">

                <EditText
                    android:id="@+id/t_serum"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderyellow"
                    android:textStyle="bold"
                    android:hint="SERUM"
                    android:inputType="number"/>
                <EditText
                    android:id="@+id/t_edta"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderviolet"
                    android:textStyle="bold"
                    android:hint="EDTA"
                    android:inputType="number" />
                <EditText
                    android:id="@+id/t_flu"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordergrey"
                    android:textStyle="bold"
                    android:hint="FLUORIDE"
                    android:inputType="number" />
                <EditText
                    android:id="@+id/t_urine"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderpaleyellow"
                    android:textStyle="bold"
                    android:hint="URINE"
                    android:inputType="number" />
                <EditText
                    android:id="@+id/t_citrate"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderbluecitrate"
                    android:textStyle="bold"
                    android:hint="Citrate"
                    android:inputType="textCapSentences" />
                <EditText
                    android:id="@+id/t_heparine"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordergreen"
                    android:textStyle="bold"
                    android:hint="Heparine"
                    android:inputType="textCapSentences" />
                <EditText
                    android:id="@+id/t_tests"
                    style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/borderblack"
                    android:textStyle="bold"
                    android:hint="TestDetails"
                    android:inputType="textCapSentences" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_insert"
                    android:text="Make TRF"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@color/green"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
